@model List<ProyectoProgramacionAvanzada.Models.Orden>

@{
    ViewBag.Title = "Historial de Órdenes";
}

@section Breadcrumbs {
    <li class="breadcrumb-item">
        <a>
            <i class="fas fa-history me-1"></i>Historial
        </a>
    </li>
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    @if (Model.Count == 0)
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-shopping-bag fa-5x text-muted mb-4"></i>
                            <h5 class="text-muted mb-3">No tienes órdenes registradas</h5>
                            <p class="text-muted mb-4">¡Comienza a explorar nuestro catálogo y realiza tu primera orden!</p>
                            <a href="@Url.Action("Index", "Product")" class="btn btn-primary btn-lg">
                                <i class="fas fa-shopping-cart me-2"></i>
                                Ir al catálogo
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th class="text-center">
                                            <i class="fas fa-hashtag me-1"></i>
                                            Número de Orden
                                        </th>
                                        <th>
                                            <i class="fas fa-calendar-alt me-1"></i>
                                            Fecha
                                        </th>
                                        <th class="text-end">
                                            <i class="fas fa-money-bill-wave me-1"></i>
                                            Total
                                        </th>
                                        <th class="text-center">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Estado
                                        </th>
                                        <th class="text-center">
                                            <i class="fas fa-cog me-1"></i>
                                            Acciones
                                        </th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var orden in Model)
                                    {
                                        <tr>
                                            <td class="text-center fw-bold">
                                                <span class="badge bg-secondary fs-6">
                                                    #@orden.Id
                                                </span>
                                            </td>
                                            <td>
                                                <i class="fas fa-clock text-muted me-2"></i>
                                                @orden.FechaOrden.ToString("dd/MM/yyyy hh:mm tt")
                                            </td>
                                            <td class="text-end">
                                                <strong class="text-success fs-5">
                                                    ₡@orden.Total.ToString("N2")
                                                </strong>
                                            </td>
                                            <td class="text-center">
                                                @{
                                                    var badgeClass = "bg-secondary";
                                                    var iconClass = "fas fa-question-circle";
                                                    
                                                    switch (orden.Estado?.ToLower())
                                                    {
                                                        case "pendiente":
                                                            badgeClass = "bg-warning text-dark";
                                                            iconClass = "fas fa-clock";
                                                            break;
                                                        case "procesando":
                                                            badgeClass = "bg-info";
                                                            iconClass = "fas fa-spinner";
                                                            break;
                                                        case "enviado":
                                                            badgeClass = "bg-primary";
                                                            iconClass = "fas fa-shipping-fast";
                                                            break;
                                                        case "entregado":
                                                            badgeClass = "bg-success";
                                                            iconClass = "fas fa-check-circle";
                                                            break;
                                                        case "cancelado":
                                                            badgeClass = "bg-danger";
                                                            iconClass = "fas fa-times-circle";
                                                            break;
                                                    }
                                                }
                                                <span class="badge @badgeClass">
                                                    <i class="@iconClass me-1"></i>
                                                    @orden.Estado
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <a href="@Url.Action("Details", new { id = orden.Id })"
                                                   class="btn btn-sm btn-outline-primary"
                                                   data-bs-toggle="tooltip"
                                                   data-bs-placement="top"
                                                   title="Ver detalles de la orden">
                                                    <i class="fas fa-eye me-1"></i>
                                                    Ver detalles
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Inicializar tooltips de Bootstrap
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}
