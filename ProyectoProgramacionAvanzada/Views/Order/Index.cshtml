@model List<ProyectoProgramacionAvanzada.Models.Orden>

@{
    ViewBag.Title = "Historial de Órdenes";
}

@section Breadcrumbs {
    <li class="breadcrumb-item">
        <a>
            <i class="fas fa-history me-1"></i>Historial
        </a>
    </li>
}

<div class="container-fluid">
    @if (Model.Count > 0)
    {
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-chart-line me-2"></i>
                            Estadísticas de Órdenes
                        </h5>
                        
                        <div class="btn-group btn-group-sm ms-3" role="group">
                            <button type="button" class="btn btn-light" data-period="week">
                                <i class="fas fa-calendar-week me-1"></i>Semana
                            </button>
                            <button type="button" class="btn btn-light active" data-period="month">
                                <i class="fas fa-calendar-alt me-1"></i>Mes
                            </button>
                            <button type="button" class="btn btn-light" data-period="year">
                                <i class="fas fa-calendar me-1"></i>Año
                            </button>
                        </div>
                    </div>
                </div>
                <div class="card-body" id="chartsContainer">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card bg-success text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="text-uppercase mb-1">Total Gastado</h6>
                                            <h3 class="mb-0" id="totalSales">₡0.00</h3>
                                        </div>
                                        <div>
                                            <i class="fas fa-dollar-sign fa-3x opacity-50"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card bg-info text-white">
                                <div class="card-body">
                                    <div class="d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="text-uppercase mb-1">Total Órdenes</h6>
                                            <h3 class="mb-0" id="totalOrders">0</h3>
                                        </div>
                                        <div>
                                            <i class="fas fa-shopping-bag fa-3x opacity-50"></i>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Gráficos -->
                    <div class="row">
                        <div class="col-md-6">
                            <div class="chart-container" style="position: relative; height: 300px;">
                                <canvas id="statusChart"></canvas>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="chart-container" style="position: relative; height: 300px;">
                                <canvas id="salesChart"></canvas>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    }

    <!-- Table -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm">
                <div class="card-body">
                    @if (Model.Count == 0)
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-shopping-bag fa-5x text-muted mb-4"></i>
                            <h5 class="text-muted mb-3">No tienes órdenes registradas</h5>
                            <p class="text-muted mb-4">¡Comienza a explorar nuestro catálogo y realiza tu primera orden!</p>
                            <a href="@Url.Action("Index", "Product")" class="btn btn-primary btn-lg">
                                <i class="fas fa-shopping-cart me-2"></i>
                                Ir al catálogo
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle">
                                <thead>
                                    <tr>
                                        <th class="text-center">
                                            <i class="fas fa-hashtag me-1"></i>
                                            Número de Orden
                                        </th>
                                        <th>
                                            <i class="fas fa-calendar-alt me-1"></i>
                                            Fecha
                                        </th>
                                        <th class="text-end">
                                            <i class="fas fa-money-bill-wave me-1"></i>
                                            Total
                                        </th>
                                        <th class="text-center">
                                            <i class="fas fa-info-circle me-1"></i>
                                            Estado
                                        </th>
                                        <th class="text-center">
                                            <i class="fas fa-cog me-1"></i>
                                            Acciones
                                        </th>
                                    </tr>
                                </thead>

                                <tbody>
                                    @foreach (var orden in Model)
                                    {
                                        <tr>
                                            <td class="text-center fw-bold">
                                                <span class="badge bg-secondary fs-6">
                                                    #@orden.Id
                                                </span>
                                            </td>
                                            <td>
                                                <i class="fas fa-clock text-muted me-2"></i>
                                                @orden.FechaOrden.ToString("dd/MM/yyyy hh:mm tt")
                                            </td>
                                            <td class="text-end">
                                                <strong class="text-success fs-5">
                                                    ₡@orden.Total.ToString("N2")
                                                </strong>
                                            </td>
                                            <td class="text-center">
                                                @{
                                                    var badgeClass = "bg-secondary";
                                                    var iconClass = "fas fa-question-circle";
                                                    
                                                    switch (orden.Estado?.ToLower())
                                                    {
                                                        case "pendiente":
                                                            badgeClass = "bg-warning text-dark";
                                                            iconClass = "fas fa-clock";
                                                            break;
                                                        case "procesando":
                                                            badgeClass = "bg-info";
                                                            iconClass = "fas fa-spinner";
                                                            break;
                                                        case "enviado":
                                                            badgeClass = "bg-primary";
                                                            iconClass = "fas fa-shipping-fast";
                                                            break;
                                                        case "entregado":
                                                            badgeClass = "bg-success";
                                                            iconClass = "fas fa-check-circle";
                                                            break;
                                                        case "cancelado":
                                                            badgeClass = "bg-danger";
                                                            iconClass = "fas fa-times-circle";
                                                            break;
                                                    }
                                                }
                                                <span class="badge @badgeClass">
                                                    <i class="@iconClass me-1"></i>
                                                    @orden.Estado
                                                </span>
                                            </td>
                                            <td class="text-center">
                                                <a href="@Url.Action("Details", new { id = orden.Id })"
                                                   class="btn btn-sm btn-outline-primary"
                                                   data-bs-toggle="tooltip"
                                                   data-bs-placement="top"
                                                   title="Ver detalles de la orden">
                                                    <i class="fas fa-eye me-1"></i>
                                                    Ver detalles
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.5.1/dist/chart.umd.min.js"></script>
    <script type="module" src="~/Scripts/order-stats.js"></script>
}
