@model IEnumerable<ProyectoProgramacionAvanzada.Models.Order>

@{
    ViewBag.Title = "Gestión de Órdenes";
}

<h2>@ViewBag.Title</h2>

<div>
  <a href="@Url.Action("Create", "Order")" class="btn btn-primary">Crear nueva orden</a>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Id</th>
      <th>Usuario ID</th>
      <th>Total</th>
      <th>Fecha de creación</th>
      <th style="width: 180px;">Acciones</th>
    </tr>
  </thead>
  <tbody>
    @if (Model != null && Model.Any())
    {
      foreach (var item in Model)
      {
        <tr>
          <td>@item.OrderId</td>
          <td>@item.UserId</td>
          <td>@item.Total.ToString("C")</td>
          <td>@item.CreatedAt.ToString("dd/MM/yyyy HH:mm")</td>
          <td>
            <a href="@Url.Action("Details", "Order", new { id = item.OrderId })" class="btn btn-sm btn-info">Detalles</a>
            <a href="@Url.Action("Delete", "Order", new { id = item.OrderId })" class="btn btn-sm btn-danger">Eliminar</a>
          </td>
        </tr>
      }
    }
    else
    {
      <tr>
        <td colspan="5">No hay órdenes registradas.</td>
      </tr>
    }
  </tbody>
</table>
