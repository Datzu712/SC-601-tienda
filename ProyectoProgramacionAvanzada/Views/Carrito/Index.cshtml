@model List<ProyectoProgramacionAvanzada.Models.CarritoItemViewModel>

@{
    ViewBag.Title = "Carrito de Compras";
}

@section Breadcrumbs {
    <li class="breadcrumb-item">
        <a href="@Url.Action("Index", "Product")">
            <i class="fas fa-store me-1"></i>Catálogo
        </a>
    </li>
    <li class="breadcrumb-item active" aria-current="page">
        <i class="fas fa-shopping-cart me-1"></i>Carrito de Compras
    </li>
}

<div class="container-fluid py-4">
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle me-2"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (Model.Count == 0)
    {
        <div class="row justify-content-center">
            <div class="col-md-6 text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-shopping-cart fa-5x text-muted opacity-50"></i>
                </div>
                <h3 class="mb-3">Tu carrito está vacío</h3>
                <p class="text-muted mb-4">¡Explora nuestro catálogo y encuentra productos increíbles!</p>
                <a href="@Url.Action("Index", "Product")" class="btn btn-primary btn-lg">
                    <i class="fas fa-store me-2"></i>
                    Ir al catálogo
                </a>
            </div>
        </div>

        return;
    }

    <div class="row">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 mb-4">
                <div class="card-header bg-white py-3">
                    <h5 class="mb-0 fw-bold">
                        Productos en tu carrito
                        <span class="badge bg-primary rounded-pill ms-2">@Model.Count</span>
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover table-striped-columns align-middle mb-0">
                            <thead class="table-light">
                            <tr>
                                <th class="border-0">
                                    <i class="fas fa-box me-1"></i> Producto
                                </th>
                                <th class="border-0">
                                    <i class="fas fa-tag me-1"></i> Precio
                                </th>
                                <th class="border-0 ">
                                    <i class="fas fa-calculator me-1"></i> Cantidad
                                </th>
                                <th class="border-0">
                                    <i class="fas fa-dollar-sign me-1"></i> Subtotal
                                </th>
                                <th class="border-0 text-center">
                                    <i class="fas fa-cog me-1"></i> Acciones
                                </th>
                            </tr>
                            </thead>

                            <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="fw-bold">
                                        <i class="fas fa-cube text-primary me-2"></i>
                                        @item.NombreProducto
                                    </td>
                                    <td class="text-success fw-semibold">
                                        ₡@item.Precio.ToString("N0")
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@item.Cantidad</span>
                                    </td>
                                    <td class="text-success fw-bold fs-5">
                                        ₡@item.SubTotal.ToString("N0")
                                    </td>
                                    <td class="text-center">
                                        <a href="@Url.Action("Remover", new { id = item.ProductoId })"
                                           class="btn btn-danger btn-sm"
                                           onclick="return confirmDelete(event)">
                                            <i class="fas fa-trash-alt me-1"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index", "Product")" class="btn btn-outline-primary">
                    <i class="fas fa-arrow-left me-2"></i>
                    Seguir comprando
                </a>
            </div>
        </div>

        <div class="col-lg-4">
            <div class="card shadow-sm border-0 sticky-top" style="top: 20px;">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0 fw-bold">
                        <i class="fas fa-receipt me-2"></i>
                        Resumen de Compra
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Subtotal:</span>
                        <span class="fw-semibold">₡@Model.Sum(x => x.SubTotal).ToString("N0")</span>
                    </div>
                    <div class="d-flex justify-content-between mb-2">
                        <span class="text-muted">Productos:</span>
                        <span class="fw-semibold">@Model.Count</span>
                    </div>
                    <hr>
                    <div class="d-flex justify-content-between mb-4">
                        <h5 class="fw-bold">Total a pagar:</h5>
                        <h4 class="text-success fw-bold">
                            ₡@Model.Sum(x => x.SubTotal).ToString("N0")
                        </h4>
                    </div>

                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="d-grid">
                            <a onclick="return confirmAdd(event)" href="@Url.Action("ConfirmarCompra")" class="btn btn-success btn-lg">
                                <i class="fas fa-check-circle me-2"></i>
                                Confirmar Compra
                            </a>
                        </div>
                        <div class="mt-3 text-center">
                            <small class="text-muted">
                                <i class="fas fa-shield-alt me-1"></i>
                                Compra 100% segura
                            </small>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-warning mb-3">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <strong>Atención:</strong> Debes iniciar sesión para completar la compra.
                        </div>

                        <div class="d-grid">
                            <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg">
                                <i class="fas fa-sign-in-alt me-2"></i>
                                Iniciar Sesión
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmAdd(event) {
            event.preventDefault();
            
            const targetUrl = event.currentTarget.href;
            
            App.modal.showWarningConfirmation({
                title: 'Finalizar compra',
                message: '¿Estás seguro de que deseas confirmar esta compra?',
                confirmText: 'Sí, confirmar',
                cancelText: 'Cancelar',
                onConfirm: function() {
                    window.location.href = targetUrl;
                }
            });
        }
        
        function confirmDelete(event) {
            event.preventDefault();
            
            const targetUrl = event.currentTarget.href;
            
            App.modal.showDeleteConfirmation({
                title: 'Eliminar producto',
                message: '¿Estás seguro de que deseas eliminar este producto del carrito?',
                confirmText: 'Sí, eliminar',
                cancelText: 'Cancelar',
                onConfirm: function() {
                    window.location.href = targetUrl;
                }
            });
        }
    </script>
}
