<!DOCTYPE html>
<html lang="es">
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Tienda</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-sRIl4kxILFvY47J16cr9ZwB07vP4J8+LH7qKQnuqkuIAvNWLzeN8tE5YBujZqJLB" crossorigin="anonymous">
    
    <style>
        .sidebar {
            min-height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1000;
        }
        .main-content {
            margin-left: 280px;
            min-height: 100vh;
        }
     
        @@media (max-width: 768px) {
            .sidebar {
                margin-left: -280px;
                transition: margin 0.3s ease-in-out;
            }
            .sidebar.show {
                margin-left: 0;
            }
            .main-content {
                margin-left: 0;
            }
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="d-flex flex-column flex-shrink-0 p-3 text-bg-dark sidebar" style="width: 280px;">
        @Html.ActionLink("Tienda", "Index", "Dashboard", new { area = "" }, new { @class = "d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none" })
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
            <li class="nav-item">
                <a href="@Url.Action("Index", "Dashboard")" class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "Dashboard" ? "active" : "text-white")">
                    <i class="fas fa-tachometer-alt pe-2"></i>
                    Dashboard
                </a>
            </li>
            <li>
                <a href="#" class="nav-link text-white">
                    <i class="fas fa-users pe-2"></i>
                    Usuarios
                </a>
            </li>
            <li>
                <a href="@Url.Action("Index", "Product")" class="nav-link @(ViewContext.RouteData.Values["action"].ToString() == "Index" && ViewContext.RouteData.Values["controller"].ToString() == "Product" ? "active" : "text-white")">
                    <i class="fas fa-th pe-2"></i>
                    Productos
                </a>
            </li>
            <li>
                @Html.ActionLink("Acerca de", "About", "Dashboard", new { area = "" }, new { @class = "nav-link " + (ViewContext.RouteData.Values["action"].ToString() == "About" ? "active" : "text-white") })
            </li>
            <li>
                @Html.ActionLink("Contacto", "Contact", "Dashboard", new { area = "" }, new { @class = "nav-link " + (ViewContext.RouteData.Values["action"].ToString() == "Contact" ? "active" : "text-white") })
            </li>
        </ul>
        <hr>
        
        <!-- User Dropdown -->
        <div class="dropdown">
            <button class="btn d-flex align-items-center text-white text-decoration-none dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-user-circle rounded-circle me-2" style="font-size: 32px;"></i>
                <strong>Usuario</strong>
            </button>
        
            <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                <li><a class="dropdown-item" href="#">Perfil</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><a class="dropdown-item" href="#">Cerrar sesión</a></li>
            </ul>
        </div>
    </div>

    <!-- Main content -->
    <div class="main-content">
        <!-- Header -->
        <header class="d-flex justify-content-between align-items-center p-3 bg-light border-bottom">
            <div class="d-flex align-items-center">
                <button class="btn btn-outline-secondary d-md-none me-2" type="button" id="sidebarToggle">
                    <i class="fas fa-bars"></i>
                </button>
                <h4 class="mb-0">@ViewBag.Title</h4>
            </div>
        </header>

        <!-- Page content -->
        <div class="container-fluid p-4">
            @RenderBody()
        </div>
        
        <footer class="bg-light text-center bottom-0 position-fixed w-100 py-3">
            <p class="mb-0">&copy; @DateTime.Now.Year - Proyecto Tienda</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    
    <script>
        document.getElementById('sidebarToggle').addEventListener('click', function() {
            document.querySelector('.sidebar').classList.toggle('show');
        });
    </script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/js/bootstrap.bundle.min.js" integrity="sha384-FKyoEForCGlyvwx9Hj09JcYn3nv7wiPVlz7YYwJrWVcXK/BmnVDxM+D2scQbITxI" crossorigin="anonymous"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
