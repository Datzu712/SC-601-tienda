@model ProyectoProgramacionAvanzada.Models.Product

@{
    ViewBag.Title = "Eliminar Usuario";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2>@ViewBag.Title</h2>
            <h3>¿Está seguro que desea eliminar este usuario?</h3>

            <dl>
                <dt>Id</dt>
                <dd>@Model.id</dd>

                <dt>Usuario</dt>
                <dd>@Model.username</dd>

                <dt>Última conexión</dt>
                <dd>@(Model.last_connection.HasValue ? Model.last_connection.Value.ToString("dd/MM/yyyy HH:mm") : "N/A")</dd>

                <dt>Habilitado</dt>
                <dd>@(Model.enabled ? "Sí" : "No")</dd>
            </dl>

            <form action="@Url.Action("Delete", "User")" method="post">
                <input type="hidden" name="id" value="@Model.id" />
                <button type="submit" class="btn btn-danger">Eliminar</button>
                <a href="@Url.Action("Index", "User")" class="btn btn-default">Cancelar</a>
            </form>
        </div>
    </div>
</div>
