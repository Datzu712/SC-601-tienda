@model ProyectoProgramacionAvanzada.Models.Product

@{
    ViewBag.Title = "Crear Producto";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "Product", FormMethod.Post))
{
  @Html.AntiForgeryToken()

  <div class="form-group">
    <label for="name">Nombre</label>
    @Html.TextBoxFor(m => m.name, new { @class = "form-control", required = "required" })
  </div>

  <div class="form-group">
    <label for="price">Precio</label>
    @Html.TextBoxFor(m => m.price, new { @class = "form-control", type = "number", step = "0.01", required = "required" })
  </div>

  <div class="form-group">
    <label for="stock">Stock</label>
    @Html.TextBoxFor(m => m.stock, new { @class = "form-control", type = "number", required = "required" })
  </div>

  <div class="form-group">
    <label for="status">Activo</label>
    @Html.CheckBoxFor(m => m.status, new { @class = "form-check-input" })
  </div>

  <button type="submit" class="btn btn-primary">Crear</button>
  <a href="@Url.Action("Index", "Product")" class="btn btn-default">Cancelar</a>
}
