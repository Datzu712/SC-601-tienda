@model ProyectoProgramacionAvanzada.Models.Product

@{
    ViewBag.Title = "Editar Producto";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Edit", "Product", FormMethod.Post))
{
  @Html.AntiForgeryToken()
  @Html.HiddenFor(m => m.id)

  <div class="form-group">
    <label for="name">Nombre</label>
    @Html.TextBoxFor(m => m.name, new { @class = "form-control", required = "required" })
  </div>

  <div class="form-group">
    <label for="price">Precio</label>
    @Html.TextBoxFor(m => m.price, new { @class = "form-control", type = "number", step = "0.01", required = "required" })
  </div>

  <div class="form-group">
    <label for="stock">Stock</label>
    @Html.TextBoxFor(m => m.stock, new { @class = "form-control", type = "number", required = "required" })
  </div>

  <div class="form-group">
    <label for="status">Activo</label>
    @Html.CheckBoxFor(m => m.status, new { @class = "form-check-input" })
  </div>

  <div class="form-group">
    <label for="created_at">Fecha de creaci√≥n</label>
    @Html.TextBoxFor(m => m.created_at, new { @class = "form-control", type = "datetime-local", @readonly = "readonly" })
  </div>

  <button type="submit" class="btn btn-success">Actualizar</button>
  <a href="@Url.Action("Index", "Product")" class="btn btn-default">Cancelar</a>
}
