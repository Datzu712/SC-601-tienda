@model ProyectoProgramacionAvanzada.Models.Producto

@{
    ViewBag.Title = "Editar Producto";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card shadow">
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">
                                <i class="fas fa-barcode text-primary me-2"></i>@Html.DisplayNameFor(m => m.CodigoProducto)
                            </label>
                            @Html.TextBoxFor(m => m.CodigoProducto, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.CodigoProducto, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">
                                <i class="fas fa-box text-primary me-2"></i>@Html.DisplayNameFor(m => m.Nombre)
                            </label>
                            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">
                                <i class="fas fa-dollar-sign text-success me-2"></i>@Html.DisplayNameFor(m => m.Precio)
                            </label>
                            @Html.TextBoxFor(m => m.Precio, new { @class = "form-control", type = "number", step = "0.01" })
                            @Html.ValidationMessageFor(m => m.Precio, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">
                                <i class="fas fa-warehouse text-warning me-2"></i>@Html.DisplayNameFor(m => m.Inventario)
                            </label>
                            @Html.TextBoxFor(m => m.Inventario, new { @class = "form-control", type = "number" })
                            @Html.ValidationMessageFor(m => m.Inventario, "", new { @class = "text-danger" })
                        </div>

                        <div class="col-md-6 mb-3">
                            <div class="form-check form-switch">
                                @Html.CheckBoxFor(m => m.Activo, new { @class = "form-check-input", role = "switch" })
                                <label class="form-check-label">
                                   @Html.DisplayNameFor(m => m.Activo)
                                </label>
                            </div>
                            @Html.ValidationMessageFor(m => m.Activo, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="d-flex gap-2 justify-content-between">
                        <a href="@Url.Action("AdminList", "Product")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Cancelar
                        </a>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-save me-2"></i>Guardar Cambios
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
