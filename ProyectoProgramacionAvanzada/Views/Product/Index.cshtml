@model IEnumerable<ProyectoProgramacionAvanzada.Models.Product>
@{
    ViewBag.Title = "Gestión de Productos";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0">@ViewBag.Title</h2>
        <a href="@Url.Action("Create", "Product")" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Crear nuevo producto
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-dark">
                        <tr>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Precio</th>
                            <th>Stock</th>
                            <th>Estado</th>
                            <th>Fecha creación</th>
                            <th class="text-center" style="width: 200px;">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.id</td>
                                    <td>@item.name</td>
                                    <td class="fw-bold text-success">@item.price.ToString("C")</td>
                                    <td>
                                        @if (item.stock > 10)
                                        {
                                            <span class="badge bg-success">@item.stock</span>
                                        }
                                        else if (item.stock > 0)
                                        {
                                            <span class="badge bg-warning">@item.stock</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">@item.stock</span>
                                        }
                                    </td>
                                    <td>
                                        @if (item.status)
                                        {
                                            <span class="badge bg-success">Activo</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">Inactivo</span>
                                        }
                                    </td>
                                    <td>@item.created_at.ToString("dd/MM/yyyy")</td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a href="@Url.Action("Details", "Product", new { id = item.id })" class="btn btn-outline-info">Ver</a>
                                            <a href="@Url.Action("Edit", "Product", new { id = item.id })" class="btn btn-outline-warning">Editar</a>
                                            <a href="@Url.Action("Delete", "Product", new { id = item.id })" class="btn btn-outline-danger">Eliminar</a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">
                                    <p class="mb-0">No hay productos registrados.</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
