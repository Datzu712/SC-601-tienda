@model IEnumerable<ProyectoProgramacionAvanzada.Models.Product>

@{
    ViewBag.Title = "Gestión de Productos";
}

<h2>@ViewBag.Title</h2>

<div>
  <a href="@Url.Action("Create", "Product")" class="btn btn-primary">Crear nuevo producto</a>
</div>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <th>Id</th>
      <th>Nombre</th>
      <th>Precio</th>
      <th>Stock</th>
      <th>Estado</th>
      <th>Fecha creación</th>
      <th style="width: 180px;">Acciones</th>
    </tr>
  </thead>
  <tbody>
    @if (Model != null && Model.Any())
    {
      foreach (var item in Model)
      {
        <tr>
          <td>@item.id</td>
          <td>@item.name</td>
          <td>@item.price.ToString("C")</td>
          <td>@item.stock</td>
          <td>@(item.status ? "Activo" : "Inactivo")</td>
          <td>@item.created_at.ToString("dd/MM/yyyy")</td>
          <td>
            <a href="@Url.Action("Details", "Product", new { id = item.id })" class="btn btn-sm btn-info">Detalles</a>
            <a href="@Url.Action("Edit", "Product", new { id = item.id })" class="btn btn-sm btn-warning">Editar</a>
            <a href="@Url.Action("Delete", "Product", new { id = item.id })" class="btn btn-sm btn-danger">Eliminar</a>
          </td>
        </tr>
      }
    }
    else
    {
      <tr>
        <td colspan="7">No hay productos registrados.</td>
      </tr>
    }
  </tbody>
</table>
